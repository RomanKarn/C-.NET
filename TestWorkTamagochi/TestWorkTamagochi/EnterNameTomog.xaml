<Window x:Class="TestWorkTamagochi.EnterNameTomog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWorkTamagochi"
        mc:Ignorable="d"
        Title="EnterNameTomog" Height="450" Width="800">
    <Grid>
        <StackPanel Width="200px" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <TextBlock>Имя питомца</TextBlock>
                <TextBox Text="{Binding Plaer.Name}"/>
            </StackPanel>
            <Button Command="{Binding ClouseWindow}">ОК</Button>
        </StackPanel>
    </Grid>
</Window>
